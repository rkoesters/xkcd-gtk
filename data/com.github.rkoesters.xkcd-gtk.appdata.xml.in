<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>com.github.rkoesters.xkcd-gtk</id>

  <provides>
    <binary>com.github.rkoesters.xkcd-gtk</binary>
  </provides>

  <name>Comic Sticks</name>
  <summary>Read xkcd: a webcomic of romance, sarcasm, math, and language</summary>
  <description>
    <p>Comic Sticks brings xkcd comics to your desktop with quick comic searching, offline browsing, and intuitive keyboard shortcuts.</p>
    <p>Features:</p>
    <ul>
      <li>Search for comics</li>
      <li>Keep track of comics with bookmarks</li>
      <li>Cache comics for later offline viewing</li>
      <li>Dark mode for late night reading</li>
      <li>View comic metadata</li>
      <li>Quickly access comic explainations via the explain xkcd wiki</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/rkoesters/xkcd-gtk</url>
  <url type="bugtracker">https://github.com/rkoesters/xkcd-gtk/issues</url>

  <developer_name>Ryan Koesters</developer_name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/rkoesters/xkcd-gtk/master/screenshots/screenshot-1.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/rkoesters/xkcd-gtk/master/screenshots/screenshot-2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/rkoesters/xkcd-gtk/master/screenshots/screenshot-3.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.0">
    <content_attribute id="language-humor">mild</content_attribute>
    <content_attribute id="language-profanity">moderate</content_attribute>
    <content_attribute id="social-info">mild</content_attribute>
    <content_attribute id="violence-cartoon">mild</content_attribute>
    <content_attribute id="violence-fantasy">mild</content_attribute>
  </content_rating>

  <translation type="gettext">com.github.rkoesters.xkcd-gtk</translation>

  <custom>
    <value key="x-appcenter-color-primary">#96a8c8</value>
    <value key="x-appcenter-color-primary-text">#1a1a1a</value>
  </custom>

  <releases>
    <release version="1.3.4" date="2021-05-30">
      <description>
        <ul>
          <li>Add Portuguese translations (Thanks to rottenpants466)</li>
          <li>Fix bug where app would dump app files in the root of the config and cache directories. The app will now put those files in an app-specific subdirectory.</li>
          <li>Bump dependency versions.</li>
          <li>Fix race condition in search results from 1.3.3.</li>
        </ul>
      </description>
    </release>
    <release version="1.3.2" date="2020-02-08">
      <description>
        <ul>
          <li>Add Italian translations (Thanks to albanobattistella)</li>
          <li>Minor performance improvement to bookmarks menu</li>
          <li>Fix a bug (race condition)</li>
        </ul>
      </description>
    </release>
    <release version="1.3.1" date="2019-11-08">
      <description>
        <ul>
          <li>Add loading icon while fetching comic</li>
          <li>Add Dutch translations (Thanks to Vistaus)</li>
        </ul>
      </description>
    </release>
    <release version="1.3.0" date="2019-05-11">
      <description>
        <ul>
          <li>Add bookmarks for keeping track of comics</li>
          <li>Update search menu to not waste space</li>
        </ul>
      </description>
    </release>
    <release version="1.2.0" date="2019-05-03">
      <description>
        <ul>
          <li>Add support for translations (user interface only, comics will remain in their original language)</li>
          <li>Add French translations (Thanks to NathanBnm)</li>
        </ul>
      </description>
    </release>
    <release version="1.1.3" date="2019-01-14">
      <description>
        <p>Fix for changes to xkcd API encoding.</p>
      </description>
    </release>
    <release version="1.1.2" date="2018-11-16">
      <description>
        <ul>
          <li>Fix restoring of window state when maximized</li>
        </ul>
      </description>
    </release>
    <release version="1.1.1" date="2018-11-04">
      <description>
        <ul>
          <li>Add keyboard shortcut for dark mode</li>
          <li>Fix saving of properties window state</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0" date="2018-10-30">
      <description>
        <p>The dark mode update!</p>
        <ul>
          <li>Add dark mode that inverts the comic image to improve readability in the dark</li>
          <li>Add buttons to titlebar for jumping to the first comic and the newest comic</li>
          <li>Fix issue with encoding of comic metadata (fixes display of special characters and emojis)</li>
          <li>Fix memory leak when closing additional comic windows</li>
        </ul>
      </description>
    </release>
    <release version="1.0.4" date="2018-10-22">
      <description>
        <p>Update app metadata to pass appstream-util validate-relax</p>
      </description>
    </release>
    <release version="1.0.3" date="2018-10-21">
      <description>
        <p>Revert fuzzy searching due to regressions</p>
      </description>
    </release>
    <release version="1.0.2" date="2018-10-21">
      <description>
        <p>Minor fixes</p>
        <ul>
          <li>Use fuzzy searching</li>
          <li>Only show alt text when hovering directly over the comic image</li>
        </ul>
      </description>
    </release>
    <release version="1.0.1" date="2018-10-19">
      <description>
        <p>Update OARS metadata.</p>
      </description>
    </release>
    <release version="1.0.0" date="2018-10-18">
      <description>
        <p>First stable release</p>
        <ul>
          <li>Improve startup time</li>
          <li>Add keyboard shortcuts for faster navigation</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
